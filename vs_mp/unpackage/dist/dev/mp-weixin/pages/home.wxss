.home .carType .title {
  font-size: 46rpx;
  margin: 40rpx 0 0 40rpx;
  font-weight: bold;
}
.home .carType .nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 20rpx 0;
  border-bottom: 2px solid #f0f0f0;
  color: #808080;
}
.home .carType .nav .nav-item {
  margin: 0 40rpx;
  padding: 20rpx 10rpx;
  border-bottom: 6rpx solid pink;
}
.home .carType .card {
  position: relative;
}
.home .carType .card .img {
  width: 90%;
  margin: 0 auto;
}
.home .carType .card .img image {
  border-radius: 10px;
  width: 100%;
  height: 400rpx;
}
.home .carType .card .container {
  position: absolute;
  top: 300rpx;
  background: #fff;
  width: 80%;
  border-radius: 10px;
  left: 50%;
  margin-left: -40%;
  padding: 40rpx 0 0 40rpx;
  box-sizing: border-box;
}
.home .carType .card .container .name {
  font-size: 40rpx;
  font-weight: bold;
}
.home .carType .card .container .todetail {
  position: absolute;
  bottom: 0;
  right: 40rpx;
}
.home .carType .card .container .todetail image {
  width: 40rpx;
  height: 40rpx;
}

